{
  "name": "next-blog-api",
  "version": "0.0.1",
  "author": "deaving-71",
  "license": "MIT",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon",
    "build": "node build.js && tsc",
    "start": "node bin/server.js",
    "clean": "rm -rf build",
    "migration:generate": "npx drizzle-kit generate:pg",
    "migration:run": "tsx database/migrate.ts",
    "migration:drop": "tsx database/drop_tables.ts",
    "migration:remove": "npx drizzle-kit drop",
    "migration:fresh": "npm run migration:drop && npm run migration:run",
    "migration:reset": "npm run migration:remove && npm run migration:generate && npm run migration:fresh",
    "db:seed": "tsx database/seeders/blogs.ts"
  },
  "keywords": [
    "Rest",
    "API",
    "Next.js",
    "Blog"
  ],
  "dependencies": {
    "@adonisjs/env": "^6.0.0",
    "@lucia-auth/adapter-drizzle": "^1.0.7",
    "body-parser": "^1.20.2",
    "cloudinary": "^2.2.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.30.8",
    "express": "^4.19.2",
    "lucia": "^3.1.1",
    "luxon": "^3.4.4",
    "multer": "^1.4.5-lts.1",
    "oslo": "^1.2.0",
    "pg": "^8.11.5",
    "pino": "^8.20.0",
    "pino-http": "^9.0.0",
    "string-strip-html": "^13.4.8",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/luxon": "^3.4.2",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.12.7",
    "@types/pg": "^8.11.5",
    "@types/uuid": "^9.0.8",
    "drizzle-kit": "^0.20.17",
    "nodemon": "^3.1.0",
    "pino-pretty": "^11.0.0",
    "tsx": "^4.7.2",
    "typescript": "^5.4.5"
  },
  "imports": {
    "#start/*": "./start/*.js",
    "#config/*": "./config/*.js",
    "#database/*": "./database/*.js",
    "#bin/*": "./bin/*.js",
    "#services/*": "./services/*.js",
    "#controllers/*": "./app/controllers/*.js",
    "#exception/*": "./app/exception/*.js",
    "#middlewares/*": "./app/middlewares/*.js",
    "#schemas/*": "./app/schemas/*.js",
    "#validators/*": "./app/validators/*.js",
    "#types/*": "./types/*.js",
    "#util/*": "./util/*.js"
  }
}
